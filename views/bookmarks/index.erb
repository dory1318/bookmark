<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>
    </li>
  <% end %>
</ul>

<form action="/create" method="post">
  <input type="text" name="url" placeholder="URL" required>
  <input type="text" name="title" placeholder="Title" />
  <input type="submit" value="Add">
</form>
